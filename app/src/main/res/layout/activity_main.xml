<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@drawable/round_greeen_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/layout_player1"
            android:background="@drawable/round_black_blue_border"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/txt_player1name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Player One"
                android:maxLines="1"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/xx"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_player2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_black_dark_blue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_player2name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="Player Two"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/oo" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:background="@drawable/round_back_purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="12dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <ImageView
                android:id="@+id/image1"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
            <ImageView
                android:id="@+id/image2"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
            <ImageView
                android:id="@+id/image3"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <ImageView
                android:id="@+id/image4"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
            <ImageView
                android:id="@+id/image5"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
            <ImageView
                android:id="@+id/image6"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <ImageView
                android:id="@+id/image7"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
            <ImageView
                android:id="@+id/image8"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
            <ImageView
                android:id="@+id/image9"
                android:background="@drawable/round_black_dark_blue"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/transparent_bg"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_width="100dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>